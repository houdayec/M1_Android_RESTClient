<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mrhoodie.creations.rest_client_v2.activities.RESTActivity">

    <LinearLayout
        android:id="@+id/RESTpanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ipPanel"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="20dp"
                android:text="BOOK ID : "
                android:textSize="40sp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/bookId"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GET"
                android:textSize="30sp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/getAllBooks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GET ALL"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/getBookById"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GET BY ID"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"/>
            </LinearLayout>

         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PUT"
                android:textSize="30sp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"/>
            <Button
                android:id="@+id/putBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUT"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POST"
                android:textSize="30sp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"/>
            <Button
                android:id="@+id/postBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POST"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:textSize="30sp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:background="@color/colorPrimaryDark"/>
            <Button
                android:id="@+id/deleteBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"/>
        </LinearLayout>






    </LinearLayout>

</RelativeLayout>
